#!/usr/bin/env ruby

require 'thor'
require 'net/http'
require 'json'
require 'terminal-table'
require 'rainbow'
require 'dainty'

module Dainty
  class App < Thor

    desc "list", "List all bookmarks"
    def list
      stream.puts "List of bookmarks"

      bookmarks = Services::List.new.list
      renderer = Renderers::OrderedList.new bookmarks, stream: stream
      renderer.render
    end

    private

    def stream
      $stdout
    end

  end
end

Dainty::App.start ARGV
